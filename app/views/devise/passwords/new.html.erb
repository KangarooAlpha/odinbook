
<div class="flex justify-center items-center p-6 m-4 w-screen h-screen">
  <fieldset class="fieldset bg-neutral border-base-300 rounded-xl p-6 max-w-2xl min-h-md">
    <legend class="fieldset-legend">Forgot your password?</legend>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class:"label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </fieldset>
</div>
