<div class="container mx-auto flex flex-row items-center">

  <div class="grid sm:flex-row justify-center items-center gap-5 grid-cols-1 py-5 px-3">
    <%= link_to "Back", "javascript:history.back()", class: 
      "text-white bg-gray-700 focus:outline-none focus:ring-4 focus:ring-blue-300 
       font-medium rounded-full text-sm px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 
       dark:focus:ring-blue-800 transition duration-300" %>

    <div class="flex gap-2">
    <%= button_to post_react_path(@post, reaction: "like"), class: 
      "relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium 
       text-gray-900 rounded-full group bg-gradient-to-br from-purple-600 to-blue-500 
       group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white 
       dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 
       dark:focus:ring-blue-800 transition" do %>
      <span class="relative px-5 py-2.5 transition-all ease-in duration-75 
                   bg-white dark:bg-gray-900 rounded-full hover:cursor-pointer
                   group-hover:bg-transparent group-hover:dark:bg-transparent">
        <%= image_tag "arrow_upward.svg", class: "w-4 h-4 inline-block mr-1" %>
        <span><%= @post.likes %></span>
      </span>
    <% end %>

    <%= button_to post_react_path(@post, reaction: "dislike"), class: 
      "relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium 
       text-gray-900 rounded-full group bg-gradient-to-br from-pink-500 to-orange-400 
       group-hover:from-pink-500 group-hover:to-orange-400 hover:text-white 
       dark:text-white focus:ring-4 focus:outline-none focus:ring-pink-200 
       dark:focus:ring-pink-800 transition " do %>
      <span class="relative px-5 py-2.5 transition-all ease-in duration-75 
                   bg-white dark:bg-gray-900 rounded-full hover:cursor-pointer
                   group-hover:bg-transparent group-hover:dark:bg-transparent">
        <%= image_tag "arrow_downward.svg", class: "w-4 h-4 inline-block mr-1" %>
        <span><%= @post.dislikes %></span>
      </span>
    <% end %>
    </div>
  </div>
  <div class="w-full max-w-4xl bg-gradient-to-br from-gray-700 via-gray-800 to-gray-900 
              rounded-3xl p-6 shadow-xl transition-shadow duration-300 hover:shadow-2xl">
    <%= turbo_frame_tag @post do %>
      <%= render partial: "posts/post", locals: { post: @post, context: "post" } %>
    <% end %>
  </div>

</div>
<div class="container mx-auto p-6 max-w-4xl mt-6">
  <h1 class="text-2xl font-extrabold mb-4 text-left text-indigo-500 drop-shadow-lg">
    Comments
  </h1>
  <div class="mb-4">
    <%= turbo_frame_tag "post_comment" do %>
      <%= link_to "Comment", new_post_comment_path(@post),
          class: "bg-gradient-to-r from-green-400 via-green-500 to-green-600 text-white font-semibold px-4 py-2 rounded-full 
                 shadow-md hover:scale-105 hover:shadow-lg transition duration-300 ease-in-out hover:bg-gradient-to-br" %>
    <% end %>
  </div>
  <div class="bg-gradient-to-br from-gray-700 via-gray-800 to-gray-900 
              p-6 rounded-3xl shadow-lg transition-shadow duration-300 hover:shadow-xl">
    <%= turbo_frame_tag "post_comments" do %>
      <% if @comments.present? %>
        <%= render partial: "comments/comment", collection: @post.comments.where(parent_id: nil), as: :comment %>
      <% else %>
        <p class="text-gray-300 italic text-center">No comment yet, be the first!</p>
      <% end %>
    <% end %>
  </div>
</div>
